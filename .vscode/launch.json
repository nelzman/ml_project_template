    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Specific File",
            "type": "debugpy",
            "request": "launch",
            "program": "/src/python/runners/training_runner.py",
            "console": "integratedTerminal",
            "args": ["arg1", "arg2"]
        },
        {
            "name":"Training Runner Python",
            "type":"python",
            "request":"launch",
            "module":"src.python.runners.training_runner",
            "args":[
                "--save_files_for_tests=False",
                "--use_autolog=False",
                "--save_models=False",
                "--use_azure_ml=False"
            ]
        }
    ]
}